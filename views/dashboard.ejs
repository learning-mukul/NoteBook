  <main>
    <%- include('partials/sidebarMenu'); -%>

    <div class="d-flex flex-column flex-shrink-0 p-3 bg-light">
      <h1 class="h2">Assignment Dashboard</h1>
      <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
          <button type="button" class="btn btn-sm btn-outline-secondary">Share</button>
          <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
        </div>
        <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
          <span data-feather="calendar"></span>
          This week
        </button>
      </div>
      <div class="row row-cols-2 row-cols-md-3 row-cols-lg-3 row-cols-xl-4 py-3">
        <% result.forEach(function(element){ %>
          <div class="col">
            <div class="card mt-3" style="width: 18rem">
              <div class="card-header"><%=element.subject%></div>
              <div class="card-body">
                <h5 class="card-title">Assignment #<%=element.id%></h5>
                <p class="card-text"><%=element.topic%></p>
                <a href="/assignment/<%=element.id%>" class="btn btn-primary">Submit Now</a>
              </div>
            </div>
          </div>
          <%  }); %>
        
      </div>
    </div>
  
      


  </main>
