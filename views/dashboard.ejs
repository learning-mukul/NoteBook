        </button>
      </div>
      <div class="row row-cols-1 row-cols-lg-4 align-items-stretch g-4 py-5">
        <% result.forEach(function(element){ %>
          <div class="col">
            <div class="card card-cover h-100 overflow-hidden rounded-5 shadow-lg" style="background-color:<%=element.color%>;">
              <div class="card-header"><%=element.name%></div>
              <div class="card-body">
                <h5 class="card-title">Assignment #<%=element.id%></h5>
                <p class="card-text"><%=element.topic%></p>
                <a href="/assignment/<%=element.id%>" class="btn btn-primary stretched-link">Submit Now</a>
              </div>
            </div>
          </div>
          <%  }); %>
        
