<%- include('partials/header'); -%>

<div class="container-xl">
  <!-- Navbar-Section -->
  <nav class="navbar navbar-expand navbar-light mt-5">
    <div class="container-fluid">
      <a class="navbar-brand" href="/#">
        <img src="/images/LOGO.svg" alt="Notebook-logo" class="logo" />
        <strong>NOTEBOOK</strong>
      </a>
      <div class="ml-auto">
        <ul class="navbar-nav">
          <li class="nav-item get-started">
            <a class="nav-link active px-3" aria-current="page" href="/logout"
              >LogOut</a
            >
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container-fluid">
    <div class="py-4">
      <h2>Assignment Dashboard</h2>
      <div class="row row-cols-2 row-cols-md-3 row-cols-lg-3 row-cols-xl-4 py-3">
        <% result.forEach(function(element){ %>
          <div class="col">
            <div class="card mt-3" style="width: 18rem">
              <div class="card-header"><%=element.subject%></div>
              <div class="card-body">
                <h5 class="card-title">Assignment #<%=element.id%></h5>
                <p class="card-text"><%=element.topic%></p>
                <a href="/assignment/<%=element.id%>" class="btn btn-primary">Submit Now</a>
              </div>
            </div>
          </div>
          <%  }); %>
        
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer'); -%>
